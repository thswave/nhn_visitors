<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="cubrid.jdbc.driver.CUBRIDDriver" />
		<property name="url" value="jdbc:cubrid:192.168.0.106:30000:nhnbasecamp:::"/>
		<property name="username" value="nhnbasecamp"/>
		<property name="password" value="nhnbasecamp"/>
	</bean>
	
	<bean id="visitorBookDao" class="com.nhnent.basecamp.dao.VisitorBookDao">
		<property name="dataSource" ref="dataSource" />
	</bean>
</beans>
